<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#181818"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_above="@id/outputtext"
        />

    <TextView
        android:id="@+id/outputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:layout_above="@+id/ll1"
        />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_ac"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_ac"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_divide"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_divide"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_start_bracket"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_start_bracket"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_end_bracket"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_end_bracket"
                android:layout_height="75dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_7"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_8"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_9"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_multiplication"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_multiplication"
                android:layout_height="75dp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_4"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_5"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_6"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_minus"
                android:layout_height="75dp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_1"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_2"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_3"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_plus"
                android:layout_height="75dp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_0"
                android:visibility="invisible"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_0"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_dot"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_dot"
                android:layout_height="75dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_equal"
                android:layout_width="75dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/btn_equal"
                android:layout_height="75dp">
            </ImageView>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>